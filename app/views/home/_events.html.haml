= section_box :events do
  %p
    - if current_event
      - uid = 'current_event'
      .tooltip
        = link_to 'Das nächste Treffen', current_event, {name: uid, class: 'toggle'}
        findet am
        %em= l(current_event.date)
        bei 
        = link_to current_event.location.name, current_event.location.url
        statt!
        = tooltip_box(uid, current_event, class: 'big') do
          = event_with_tooltip current_event
    - else
      Das nächste Treffen findet voraussichtlich am
      %em= "#{l(next_event_date)}"
      statt.
    
  %h3 Vergangene Treffen
  %ul.clearfix
    - events.each do |event|
      - uid = "event_#{event.id}"
      %li.tooltip
        = link_to "#{l(event.date, format: :date)} - #{event.name}", event, {name: uid, class: 'toggle'}
        = tooltip_box(uid, event, class: 'big') do
          = event_with_tooltip event
