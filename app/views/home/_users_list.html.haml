%ul.imagelist.clearfix
  - users.each_with_index do |user, index|
    - uid = "#{user.id}_#{rand(100)}"
    - hack = index > 11
    %li.tooltip
      = image_tag hack ? 'logo.png' : user.image, class: "toggle", name: uid, size: '48x48', alt: user.name, 'data-src' => user.image
      = tooltip_box(uid, user) do
        %p
          = user.name
          = user.freelancer? ? '/ Freiberufler' : ''
          = user.available? ? '/ Verf√ºgbar' : ''
          - unless user.location.blank?
            %br
            = user.location
          - unless user.description.blank?
            %br
            %strong= user.description
        %p
          %dl.clearfix
            %dt Twitter:
            %dd= link_to_twitter user
            - unless user.github.blank?
              %dt Github:
              %dd= link_to_github user
            - unless user.url.blank?
              %dt Homepage:
              %dd= link_to user.url, user.url