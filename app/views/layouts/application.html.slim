doctype 5
html
  head
    title= page_title
    meta charset="utf-8"
    meta name="description" content="#{meta_desc}"
    meta name="author" content="github contributors: #{contributors}"
    link rel='shortcut icon' href=image_path('ruby.png')
    = auto_discovery_link_tag :rss, events_path(format: :xml), title: "Event-Feed"
    = csrf_meta_tag
    = stylesheet_link_tag "application"
    = whitelabel_stylesheet_link_tag
    = javascript_include_tag "application"
    = whitelabel_javascript_include_tag
    = render 'shared/i18njs'
  body
    = ribbon(:github)
    = ribbon(:senor_developer)
    .container
      header#on_ruby.clearfix
        = render 'shared/login'
        = render 'shared/headline'
      nav#nav
        = render 'shared/nav'
      .main
        = render 'shared/hint'
        = yield
        = render 'shared/script'
    footer
      = render 'shared/footer', imprint: Whitelabel[:imprint], other_usergroups: Whitelabel[:other_usergroups]
  = render 'shared/info'
  = javascript_include_tag "https://apis.google.com/js/plusone.js", "https://platform.twitter.com/widgets.js"
