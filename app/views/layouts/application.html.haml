!!! utf-8
%html
  %head
    %title= "#{title} - #{content_for?(:page_title) ? yield(:page_title) : subtitle}"
    
    %meta{charset: "utf-8"}
    %meta{name: "description", content: "#{title} - #{subtitle}"}
    %meta{name: "author", content: "Peter Schr√∂der"}
    
    %link{rel: 'shortcut icon', href: image_path('logo_icon.png')}
    
    / = stylesheet_link_tag 'screen'
    = auto_discovery_link_tag :rss, rss_events_path, title: "Event-Feed"
    = csrf_meta_tag
    = stylesheet_link_tag "application"
    = javascript_include_tag 'http://maps.google.com/maps/api/js?sensor=true'
    = javascript_include_tag "application"

    

  %body
    .container
      %header#hor
        = render 'shared/login'
        #logo= link_to(image_tag('/assets/logo.png', alt: title, title: title), root_path)
        %h1= link_to title, root_path
        %h2= link_to subtitle, root_path
      %nav#nav
        %ul
          %li
            = link_to '/#hor' do
              %p.logo.ir HoR
          - [:events, :people, :locations, :wishes, :companies].each do |it|
            %li= link_to t(it), "/##{it}"
          %li
            = link_to '/#hor' do
              %p.logo.ir HoR
      .main
        = flash_growl
        = yield
        = render 'shared/script'
    %footer
      = render 'shared/footer'
